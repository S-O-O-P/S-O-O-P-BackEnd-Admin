<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.soop.pages.notice.model.dao.NoticeMapper">
    <resultMap id="NoticeResultMap" type="com.soop.pages.notice.model.dto.NoticeFileDTO">
        <id property="noticeCode" column="NOTICE_CODE"/>
        <result property="category" column="CATEGORY"/>
        <result property="title" column="TITLE"/>
        <result property="content" column="CONTENT"/>
        <result property="userCode" column="USER_CODE"/>
        <result property="regDate" column="REG_DATE"/>
<!--        <association property="fileDTO" javaType="com.soop.pages.notice.model.dto.FileDTO">-->
<!--            <id property="fileCode" column="FILE_CODE"/>-->
<!--            <result property="name" column="Name"/>-->
<!--            <result property="noticeCode" column="NOTICE_CODE"/>-->
<!--        </association>-->
    </resultMap>

    <insert id="registNotice" parameterType="com.soop.pages.notice.model.dto.NoticeFileDTO">
        INSERT INTO NOTICE
        (
               CATEGORY,
               TITLE,
               CONTENT,
               USER_CODE,
               REG_DATE
        )
        VALUES
        (
               #{category},
               #{title},
               #{content},
               #{userCode},
               #{regDate}
        )
    </insert>
</mapper>